<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/calc_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/display"
            android:layout_marginTop="50dp"
            android:gravity="right"
            android:textSize="100sp"
            android:hint="0"
            android:layout_gravity="bottom"
            android:textColor="#FFFFFFFF" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:textSize="30sp"
            android:hint="history"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row01"
        android:layout_weight="1"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/MemoryClear"
            android:id="@+id/button01"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            style="@style/calc_buttons"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/MemoryAdd"
            android:id="@+id/button02"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/MemorySubt"
            android:id="@+id/button03"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/MemoryRecall"
            android:id="@+id/button04"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/RandomNum"
            android:id="@+id/button05"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:id="@+id/row02"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Square"
            android:id="@+id/button06"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/SquareRoot"
            android:id="@+id/button07"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Percent"
            android:id="@+id/button08"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/OneOverX"
            android:id="@+id/button09"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Factorial"
            android:id="@+id/button10"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:id="@+id/row03"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Division"
            android:id="@+id/button11"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Seven"
            android:id="@+id/button12"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Eight"
            android:id="@+id/button13"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Nine"
            android:id="@+id/button14"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/AC"
            android:id="@+id/button15"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:id="@+id/row04"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Multiplication"
            android:id="@+id/button16"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Four"
            android:id="@+id/button17"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Five"
            android:id="@+id/button18"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Six"
            android:id="@+id/button19"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Backspace"
            android:id="@+id/button20"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:id="@+id/row5"
        android:layout_weight="1" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Subtraction"
            android:id="@+id/button21"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/One"
            android:id="@+id/button22"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Two"
            android:id="@+id/button23"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Three"
            android:id="@+id/button24"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            android:clickable="true"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Help"
            android:id="@+id/button25"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            android:clickable="true"
            style="@style/calc_buttons" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:id="@+id/row06"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Addition"
            android:id="@+id/button26"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/DecimalPoint"
            android:id="@+id/button27"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Zero"
            android:id="@+id/button28"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ChangeSign"
            android:id="@+id/button29"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            android:clickable="true"
            style="@style/calc_buttons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Equal"
            android:id="@+id/button30"
            android:layout_weight="1"
            android:background="@drawable/calc_buttons"
            android:layout_marginLeft="3dp"
            android:clickable="true"
            style="@style/calc_buttons" />
    </LinearLayout>

</LinearLayout>
